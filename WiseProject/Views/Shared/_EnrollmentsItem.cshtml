@model WiseProject.Models.Course


<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/images/@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.Id"><h4>@Model.Title</h4></a>
                <h4>@Model.Category</h4>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>