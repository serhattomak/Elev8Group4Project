@model List<WiseProject.Models.Course>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="courses-grid" role="tabpanel" aria-labelledby="courses-grid-tab">
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6">

                    <div class="singel-course mt-30">
                        <div class="thum">
                            <div class="image">
                                <img src="/images/course/@course.ImageUrl" alt="@course.Title">
                            </div>
                            <div class="price">
                                <span>Free</span>
                            </div>
                        </div>
                        <div class="cont">
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id"><h4>@course.Title</h4></a>
                            <div class="course-teacher">
                                <div class="admin">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-user"></i><span>@course.Enrollments.Count</span></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div> <!-- singel course -->

                </div>
            }
        </div> <!-- row -->
    </div>
    <div class="tab-pane fade" id="courses-list" role="tabpanel" aria-labelledby="courses-list-tab">
        <div class="row">
            @foreach (var listCourse in Model)
            {
                <div class="col-lg-12">

                    <div class="singel-course mt-30">
                        <div class="row no-gutters">
                            <div class="col-md-6">
                                <div class="thum">
                                    <div class="image">
                                        <img src="~/images/course/@listCourse.ImageUrl" alt="@listCourse.Title">
                                    </div>
                                    <div class="price">
                                        <span>Free</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="cont">
                                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@listCourse.Id"><h4>@listCourse.Title</h4></a>
                                    <div class="course-teacher">
                                        <div class="admin">
                                            <ul>
                                                <li><a href="#"><i class="fa fa-user"></i><span>@listCourse.Enrollments.Count</span></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> <!--  row  -->
                    </div> <!-- singel course -->
                </div>
            }
        </div>
    </div>
</div> <!-- tab content -->
